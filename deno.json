{
  "name": "@hyperpolymath/eclexia",
  "version": "0.1.0",
  "exports": {
    ".": "./src/mod.ts",
    "./parser": "./src/parser/mod.ts",
    "./runtime": "./src/runtime/mod.ts",
    "./cli": "./src/cli/mod.ts",
    "./lsp": "./src/lsp/mod.ts"
  },
  "tasks": {
    "dev": "deno run --watch src/cli/main.ts",
    "test": "deno test --allow-read --allow-write --coverage=coverage",
    "test:watch": "deno test --allow-read --allow-write --watch",
    "coverage": "deno coverage coverage --lcov --output=coverage.lcov",
    "bench": "deno bench --allow-read",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno check src/**/*.ts",
    "bundle": "deno bundle src/mod.ts dist/eclexia.js",
    "compile": "deno compile --allow-read --allow-write --output=bin/eclexia src/cli/main.ts",
    "playground": "deno run --allow-read --allow-net --allow-write playground/server.ts",
    "lsp": "deno run --allow-read --allow-write src/lsp/main.ts",
    "repl": "deno run --allow-read src/cli/repl.ts",
    "examples": "deno run --allow-read src/cli/main.ts examples/",
    "docs": "deno doc --html --name=Eclexia src/mod.ts",
    "ci": "deno fmt --check && deno lint && deno check src/**/*.ts && deno test --allow-read --allow-write"
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "lib": ["deno.window", "deno.unstable"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/http": "jsr:@std/http@^1.0.0",
    "@std/collections": "jsr:@std/collections@^1.0.0"
  }
}
